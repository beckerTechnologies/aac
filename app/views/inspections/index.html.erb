<h1>Listing inspections</h1>

<table>
  <thead>
    <tr>
      <th>Inspection ID</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= inspection.id %></td>
        <td><%= link_to 'Show', inspection %></td>
        <td><%= link_to 'Edit', edit_inspection_path(inspection) %></td>
        <td><%= link_to 'Destroy', inspection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show PDF', {:controller => "reports", :action => "pdf", :id => inspection.id, :format => :pdf} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

